<div class="container text-center page-title">
  <h2> Add Item </h2>
</div>

<div class="container  text-center new-item-form">
  <%= form_for @presenter.item, url: {action: "create"} do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name, size: 60 %><br><br>
    <%= f.label :description %><br>
    <%= f.text_area :description, :cols => 60, :rows => 10 %><br><br>
    <%= f.label :buy_it_now_price %><br>
    <%= f.text_field :buy_it_now_price, size: 60 %><br><br>
    <%= f.label :starting_bid_price %><br>
    <%= f.text_field :starting_bid_price, size: 60 %><br><br>
    <%= f.label :auction_end_time %><br>
    <%= f.datetime_select :auction_end_time, size: 60 %><br><br>
    <div class="file-field-wrapper">
      <%= f.label :image %>
      <%= f.file_field :image %><br>
      <%= f.hidden_field :image_cache %><br>
    </div>
    <%= f.submit "Create", class: "btn-buy-now" %>
  <% end %>

  <% if @presenter.errors %>
    <ul>
      <% @presenter.errors.each do |error| %>
        <li> <%= error %> </li>
      <% end %>
    </ul>
  <% end %>
</div>
